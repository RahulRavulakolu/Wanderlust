<% layout("layouts/boilerplate") %>
<body>
    <br>
    <div class="row">
        <div class="col-8 offset- 3">
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <h1>Create a New Listing</h1><br>
                <div class="mb-1">
                    <label for="title" class="form-label">Title:</label>   
                    <input type="text" id="title" name="title" required placeholder="Enter the title of the place" class="form-control">
                    <div class="valid-feedback">good length</div>
                </div>
                
                <br>
                <div class="mb-1"> 
                    <label for="description" class="form-label"> Description:</label>
                    <textarea name="description" class="form-control" required placeholder="write about the place" rows="5" cols="15 "></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                
                <br>
                <div class="mb-2">
                    <label for="image" class="form-label">Upload Image:</label>
                    <input type="file" id="image" class="form-control" name="image" >
                </div>

                 <br>
                <div class="mb-2">
                   <label for="category">Choose a category:</label>
                    <select id="category" name="category" class="form-select mt-2" required>
                        <option value="" disabled selected>Select an option</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic_places">Iconic places</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing_pools">Amazing pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farm">Farm</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Domes">Domes</option>
                        <option value="Boat">Boat</option>
                    </select>

                </div>

                
                <br>
                <div class="row">
                    <div class="mb-2 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" class="form-control" name="price" required placeholder="1,100">
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                
                    <br>
                    <div class="mb-2 col-md-8">
                        <label for="location" class="form-label"> Location:</label>
                        <input type="text" id="location" class="form-control" name="location" required placeholder="Rajasthan,jaipur,Delhi">
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
            
                </div>
                <br>    
                <div class="mb-2">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" id="country" class="form-control" name="country" required placeholder="India">
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
            
                <br>
                <button class="btn create-btn btn-dark mb-4">Create Listing</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
