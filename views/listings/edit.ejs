<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-1">
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <h1>Edit the Listing</h1>
                <div class="mb-2 mt-5">
                    <label for="title" class="form-label">Title:</label>   
                    <input type="text" id="title" class="form-control"  name="title" required value="<%= listing.title %>" >
                    <div class="valid-feedback">good length</div>
                </div>
                <br><br>
                <div class="mb-2">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="description" class="form-control" required rows="5" cols="25"><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <br><br>
                 <div class="mb-2">
                    <label for="image" class="form-label">Original lImage :</label><br>
                    <img src="<%= imageurl %>">
                     
                </div>   
                <div class="mb-2">
                    <label for="image" class="form-label">Upload new Image :</label>
                    <input type="file" class="form-control" id="image" name="image" >
                    
                </div>   
                <br><br>
                <div class="row">
                    <div class="mb-2 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" class="form-control" id="price" name="price" required  value="<%= listing.price %>">
                         <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <br><br>
                    <div class="mb-2 col-md-8">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" class="form-control" id="location" name="location" required  value="<%= listing.location %>">
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                </div>
                <br>    <br>
                <div class="mb-2">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" class="form-control" id="country" name="country" required  value="<%= listing.country %>">
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
                <br>
                <button type="submit" class="btn edit-btn btn-dark mb-4" >Edit</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
